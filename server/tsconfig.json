{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "sourceMap": true,
      "skipLibCheck": true,
      "typeRoots": ["./src/types", "./node_modules/@types"], // Add this line
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  